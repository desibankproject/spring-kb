<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">
        
        
          <!-- the mvc resources tag does the magic -->
 		<mvc:resources mapping="/img/**" location="/img/" />
        
        <!-- who will scan this package ??? DispatcherServlet - >> means front controller -->
        <context:component-scan base-package="com.mvc.web.controller"/>
                <context:component-scan base-package="com.mvc.web.controller.rest.api.exception"/>
        
        
        <!-- to enable spring mvc features!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
        <mvc:annotation-driven/>
        
        	<!-- Mapping for the view resolver -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/pages/</value>
		</property>
		<property name="order" value="2" />
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>
	
	 <!-- This is spring bean  StandardServletMultipartResolver which will help you to upload your image-->
     <bean id="multipartResolver" class="org.springframework.web.multipart.support.StandardServletMultipartResolver"/>
     
        
     </beans>   